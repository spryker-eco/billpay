<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\Billpay\Persistence" package="src.Orm.Zed.Billpay.Persistence">

    <table name="spy_payment_billpay" phpName="SpyPaymentBillpay">
        <column name="id_payment_billpay" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_sales_order" required="true" type="INTEGER"/>

        <column name="client_ip" required="true" type="VARCHAR"/>
        <column name="payment_method" required="true" type="VARCHAR"/>
        <column name="reference" required="true" type="VARCHAR"/>
        <column name="bptid" type="VARCHAR"/>
        <column name="date_of_birth" required="true" type="INTEGER"/>

        <foreign-key name="spy_payment_billpay-fk_sales_order" foreignTable="spy_sales_order" phpName="SpySalesOrder">
            <reference foreign="id_sales_order" local="fk_sales_order"/>
        </foreign-key>

        <index name="spy_payment_billpay-index-bptid">
            <index-column name="bptid" />
        </index>

        <unique name="spy_payment_billpay-unique-reference">
            <unique-column name="reference" />
        </unique>

        <behavior name="timestampable"/>
        <id-method-parameter value="spy_payment_billpay_pk_seq"/>
    </table>

    <table name="spy_payment_billpay_order_item">
        <column name="fk_payment_billpay" type="INTEGER" primaryKey="true"/>
        <column name="fk_sales_order_item" type="INTEGER" primaryKey="true"/>
        <column name="fk_payment_billpay_invoice_bank_account" type="INTEGER"/>
        <column name="invoice_duedate" type="INTEGER"/>
        <column name="status" required="true" type="VARCHAR"/>
        <behavior name="timestampable">
            <parameter name="disable_updated_at" value="true"/>
        </behavior>
        <foreign-key name="spy_billpay_order_item-fk_billpay" foreignTable="spy_payment_billpay">
            <reference foreign="id_payment_billpay" local="fk_payment_billpay"/>
        </foreign-key>
        <foreign-key name="spy_payment_billpay_order_item-fk_sales_order_item" foreignTable="spy_sales_order_item">
            <reference foreign="id_sales_order_item" local="fk_sales_order_item"/>
        </foreign-key>
        <foreign-key name="spy_payment_billpay_order_item-fk_payment_billpay_invoice_bank_account" foreignTable="spy_payment_billpay_invoice_bank_account">
            <reference foreign="id_payment_billpay_invoice_bank_account" local="fk_payment_billpay_invoice_bank_account"/>
        </foreign-key>
    </table>

    <table name="spy_payment_billpay_invoice_bank_account">
        <column name="id_payment_billpay_invoice_bank_account" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="account_holder" required="true" type="VARCHAR"/>
        <column name="account_number" required="true" type="VARCHAR"/>
        <column name="activation_performed" required="true" type="INTEGER" defaultValue="0"/>
        <column name="bank_name" required="true" type="VARCHAR"/>
        <column name="invoice_reference" required="true" type="VARCHAR"/>
        <id-method-parameter value="spy_payment_billpay_invoice_bank_account_pk_seq"/>
    </table>

    <table name="spy_payment_billpay_api_log">
        <column name="id_payment_billpay_api_log" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="method" required="false" type="VARCHAR" />
        <column name="status" required="false" type="VARCHAR"/>
        <column name="bptid" required="false" type="VARCHAR"/>
        <column name="error_code" required="true" type="INTEGER" />
        <column name="merchant_message" required="false" type="VARCHAR"/>
        <column name="customer_message" required="false" type="VARCHAR"/>
        <behavior name="timestampable"/>

        <index name="spy_payment_billpay_api_log-index-bptid">
            <index-column name="bptid" />
        </index>

        <id-method-parameter value="spy_payment_billpay_api_log_pk_seq"/>
    </table>

</database>
